---
import App from "../App.astro";
import { Section, Accordion, Image, Icon, H1, H2, H3, H4 } from "ui";

interface Props {
  page: number;
  title: string;
  subtitle: string;
  nextUrl?: string;
}

const { page, title, subtitle, nextUrl = '#' } = Astro.props;
---

<App title={title}>
  <main>
    <!-- Intro -->
    <Section name="intro">
      <div class="breadcrumb">
        <ol class="breadcrumb-list">
          <li>
            <a href="/"><span>Баш</span></a>
          </li>
          <li>
            <a href="/exercises"><span>Күнегүләр</span></a>
          </li>
          <li>
            <a href="/exercises/5-6"><span>5 - 6 яшь</span></a>
          </li>
          <li class="active">
            <a href="#" class="disabled">
              <span>{title}</span>
            </a>
          </li>
        </ol>
      </div>

      <div class="page" class:list={[`page-${page}`]}>
        <div class="wrapper">
          <div class="aside">
            <div class="aside__section">
              <div class="aside__section-title">5 - 6 яшь</div>
              <Image src="page-2/section.png" />
            </div>

            <div class="aside__accordions" data-accordion="single">
              <Accordion title="Логика" active={page == 2}>
                <ul
                  style="--primary: rgb(254, 92, 148);
                --primary-hover:rgba(254, 92, 148,0.2);
             --primary-light:rgba(254, 92, 148,0.1);"
                >
                  <li>
                    <a href="/exercises/logics/high-and-low">Югары һәм түбән</a>
                  </li>
                  <li>
                    <a href="/exercises/logics/hard-and-soft">Каты һәм йомшак</a
                    >
                  </li>
                  <li><a href="/exercises/logics/extra-row">Өстәмә рәт</a></li>
                  <li><a href="/exercises/logics/losses">Югалтулар</a></li>
                  <li><a href="#">Салкын Һәм кайнар</a></li>
                  <li><a href="#">Рәсемне җый</a></li>
                </ul>
              </Accordion>

              <Accordion title="Уку Һәм грамота" active={page == 3}>
                <ul
                  style="--primary:rgb(148, 136, 61);
                     --primary-hover:rgba(253, 233, 206,0.8);
                  --primary-light:rgba(253, 233, 206,0.4);"
                >
                  <li>
                    <a href="/exercises/grammar/purity-of-speech"
                      >Сөйләм сафлыгы</a
                    >
                  </li>
                  <li><a href="/exercises/grammar/alphabet">Әлифба</a></li>
                  <li>
                    <a href="/exercises/grammar/choose-a-letter"
                      >Хәрефне сайла</a
                    >
                  </li>
                  <li>
                    <a href="/exercises/grammar/work-with-letters"
                      >Хәрефләр белән эш</a
                    >
                  </li>
                </ul>
              </Accordion>

              <Accordion title="Санарга өйрәнәбез" active={page == 4}>
                <ul>
                  <li><a href="#">Югары һәм түбән</a></li>
                  <li><a href="#">Каты һәм йомшак</a></li>
                  <li><a href="#">Өстәмә рәт</a></li>
                  <li><a href="#">Югалтулар</a></li>
                  <li><a href="#">Салкын Һәм кайнар</a></li>
                  <li><a href="#">Рәсемне җый</a></li>
                </ul>
              </Accordion>
              <Accordion title="Игътибар һәм хәтер" active={page == 5}>
                <ul>
                  <li><a href="#">Югары һәм түбән</a></li>
                  <li><a href="#">Каты һәм йомшак</a></li>
                  <li><a href="#">Өстәмә рәт</a></li>
                  <li><a href="#">Югалтулар</a></li>
                  <li><a href="#">Салкын Һәм кайнар</a></li>
                  <li><a href="#">Рәсемне җый</a></li>
                </ul>
              </Accordion>
              <Accordion title="Төсләр" active={page == 6}>
                <ul>
                  <li><a href="#">Югары һәм түбән</a></li>
                  <li><a href="#">Каты һәм йомшак</a></li>
                  <li><a href="#">Өстәмә рәт</a></li>
                  <li><a href="#">Югалтулар</a></li>
                  <li><a href="#">Салкын Һәм кайнар</a></li>
                  <li><a href="#">Рәсемне җый</a></li>
                </ul>
              </Accordion>
              <Accordion title="Логопедик биремнәр" active={page == 7}>
                <ul>
                  <li><a href="#">Югары һәм түбән</a></li>
                  <li><a href="#">Каты һәм йомшак</a></li>
                  <li><a href="#">Өстәмә рәт</a></li>
                  <li><a href="#">Югалтулар</a></li>
                  <li><a href="#">Салкын Һәм кайнар</a></li>
                  <li><a href="#">Рәсемне җый</a></li>
                </ul>
              </Accordion>
            </div>
          </div>

          <div class="content">
            <div class="content-title">Күнегү "{title}"</div>

            <div class="card">
              <div class="card-title" set:html={subtitle} />

              <slot />

              <a href={nextUrl} class="btn">Дәвам итәргә</a>
            </div>
          </div>

          <div class="result">
            <div class="result__level">
              <div class="result__level-title">Дәрәҗә</div>
              <div class="flex-row">
                <Image src="icons/star-filled.png" />
                <Image src="icons/star-empty.png" />
                <Image src="icons/star-empty.png" />
              </div>
            </div>

            <div class="result__actions">
              <Image src="icons/sound.svg" />
              <Image src="icons/play.png" />
            </div>

            <div class="result__table">
              <table>
                <tr>
                  <th colspan="2">Җаваплар</th>
                </tr>
                <tr>
                  <td><Image src="icons/correct.svg" /></td>
                  <td>1</td>
                </tr>
                <tr>
                  <td><Image src="icons/wrong.svg" /></td>
                  <td><span class="false">0</span></td>
                </tr>
              </table>
            </div>

            <Image class="result__image" src="aside.png" />
          </div>
        </div>
      </div>
    </Section>
  </main>
</App>
